@model IEnumerable<WebApplication_Practice.ViewModels.Customer.CustomerGridViewModel>
@{
    Layout = null;
}
<div class="card-body">
    <table class="table table-striped table-hover">
        <tr>
            @*<th scope="col">功能</th>*@
            <th scope="col"> #</th>
            <th scope="col">聯絡人姓名</th>
            <th scope="col">公司名稱</th>
            <th scope="col">聯絡人職稱</th>
            <th scope="col">城市</th>
            <th scope="col">國家</th>
            <th scope="col">電話</th>
            <th scope="col"></th>
        </tr>
        @{
            var amount = 0;
        }
        @foreach (var item in Model)
        {
            <tr>
                @*<th scope="row">
                        <div class="btn-group">
                            <button class="btn">修改</button>
                            <button class="btn">刪除</button>
                        </div>
                    </th>*@
                <th scope="row">@(++amount)</th>
                <td>@item.CustomerName</td>
                <td>@item.CompanyName</td>
                <td>@item.CustomerTitle</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.PhoneNumber</td>
            </tr>}
    </table>
</div>